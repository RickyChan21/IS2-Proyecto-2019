#include <Wire.h>
#include <ESP8266WiFi.h>
#include "Adafruit_MQTT.h"
#include "Adafruit_MQTT_Client.h"


ADC_MODE(ADC_VCC);

#define WLAN_SSID       "CWC-9307524"
#define WLAN_PASS       "mffksgMG57rwbhjkheshjkdekh"

#define HOST        "192.168.0.32"
#define PORT        1883
#define USERNAME    "username"
#define PASSWORD "12345678" 

WiFiClient client;
Adafruit_MQTT_Client mqtt(&client, HOST, PORT, USERNAME, PASSWORD);

#define LIGHT 04 // define pint 4 for sensor
#define RELAY 14 // define pin 14 as for relay

Adafruit_MQTT_Publish mensaje = Adafruit_MQTT_Publish(&mqtt, "mensaje");
void MQTT_connect();

void setup() {
  WiFi.forceSleepWake();
  WiFi.mode(WIFI_STA);
  Serial.begin(115200);
  Serial.print("Connecting to ");
  Serial.println(WLAN_SSID);

  WiFi.begin(WLAN_SSID, WLAN_PASS);
  while (WiFi.status() != WL_CONNECTED) 
  {
    delay(500);
    Serial.print(".");
  }
  
  Serial.println();
  Serial.println("WiFi connected");
  Serial.println("IP address: "); Serial.println(WiFi.localIP());
  MQTT_connect();

  pinMode(LIGHT, INPUT_PULLUP);// define pin as Input  sensor
  pinMode(RELAY, OUTPUT);// define pin as OUTPUT for relay
}

void loop() {
  int L =digitalRead(LIGHT);// read the sensor 
      if(L == 1){
    Serial.println(" light is OFF");
    digitalWrite(RELAY,HIGH);// turn the relay ON
    mensaje.publish("La luz esta encendida");
  }
  else{

     Serial.println(" light is ON");
     digitalWrite(RELAY,LOW);// turn the relay OFF
     mensaje.publish("La luz esta apagada");
  }


  delay(60000);
}

 void MQTT_connect() {
  int8_t ret;
  if (mqtt.connected()) {
    return;
  }
 
  Serial.print("Connecting to MQTT... ");
  uint8_t retries = 3;
  while ((ret = mqtt.connect()) != 0) { // connect will return 0 for connected
       Serial.println(mqtt.connectErrorString(ret));
       Serial.println("Retrying MQTT connection in 5 seconds...");
       mqtt.disconnect();
       delay(5000);  // wait 5 seconds
       retries--;
       if (retries == 0) {
         // basically die and wait for WDT to reset me
         while (1);
       }
  }
  Serial.println("MQTT Connected!");
}
